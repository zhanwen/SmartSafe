<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:background="#8866ff00"
        android:gravity="center"
        android:text="手机防盗"
        android:textColor="#000000"
        android:textSize="28sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="8dip"
            android:text="安全号码"
            android:textColor="#000000"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/tv_safenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:layout_marginTop="8dip"
            android:text="xxxx"
            android:textColor="#000000"
            android:textSize="20sp" >
        </TextView>
    </RelativeLayout>

    <View
        android:layout_marginTop="10dip"
        android:layout_width="fill_parent"
        android:layout_height="0.2dip" 
        android:background="#44000000"/>
    
     <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="8dip"
            android:text="防盗保护是否开启"
            android:textColor="#000000"
            android:textSize="20sp" >
        </TextView>

        <ImageView
            android:id="@+id/iv_protecting"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:layout_marginTop="8dip"
            android:src="@drawable/unlock">
        </ImageView>
        
    </RelativeLayout>

    <View
        android:layout_marginTop="10dip"
        android:layout_width="fill_parent"
        android:layout_height="0.2dip" 
        android:background="#44000000"/>
    
      <TextView
          	android:clickable="true"
          	android:onClick="reEnterSetup"
          	android:background="@drawable/shape_select"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="8dip"
            android:text="重新进入设置向导"
            android:textColor="#000000"
            android:textSize="20sp" >
        </TextView>
    
    <View
        android:layout_marginTop="5dip"
        android:layout_width="fill_parent"
        android:layout_height="0.2dip" 
        android:background="#44000000"/>
     <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="8dip"
            android:text="功能简介"
            android:textColor="#000000"
            android:textSize="20sp" 
            android:background="#44000000">
        </TextView>
    
     <TextView
        style="@style/text_content_style"
        android:drawableLeft="@drawable/star_big_on"
        android:text="GPS追踪:#*location*#" />
     
     <TextView
        style="@style/text_content_style"
        android:drawableLeft="@drawable/star_big_on"
        android:text="播放报警音乐:#*alarm*#" />

    <TextView
        style="@style/text_content_style"
        android:drawableLeft="@drawable/star_big_on"
        android:text="远程删除数据:#*wipedata*#" />

    <TextView
        style="@style/text_content_style"
        android:drawableLeft="@drawable/star_big_on"
        android:text="远程锁屏:#*lockscreen*#" />

</LinearLayout>