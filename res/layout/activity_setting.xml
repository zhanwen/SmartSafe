<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/res/com.wolf.wolfsafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="#8866ff00"
        android:gravity="center"
        android:text="设置中心"
        android:textSize="22sp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <com.wolf.wolfsafe.ui.SettingItemView
                android:id="@+id/siv_update"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                itheima:desc_off="自动更新已经关闭"
                itheima:desc_on="自动更新已经开启"
                itheima:title="自动更新设置" >
            </com.wolf.wolfsafe.ui.SettingItemView>

            <com.wolf.wolfsafe.ui.SettingItemView
                android:id="@+id/siv_showaddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                itheima:desc_off="归属地显示已经关闭"
                itheima:desc_on="归属地显示已经开启"
                itheima:title="电话归属地显示设置" >
            </com.wolf.wolfsafe.ui.SettingItemView>

            <com.wolf.wolfsafe.ui.SettingClickView
                android:id="@+id/scv_changebg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </com.wolf.wolfsafe.ui.SettingClickView>

            <com.wolf.wolfsafe.ui.SettingClickView
                android:id="@+id/scv_changeposition"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </com.wolf.wolfsafe.ui.SettingClickView>

            <com.wolf.wolfsafe.ui.SettingItemView
                android:id="@+id/siv_callsms_safe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                itheima:desc_off="黑名单拦截已经关闭"
                itheima:desc_on="黑名单拦截已经开启"
                itheima:title="黑名单拦截设置" >
            </com.wolf.wolfsafe.ui.SettingItemView>

            <com.wolf.wolfsafe.ui.SettingItemView
                android:id="@+id/siv_applock"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                itheima:desc_off="程序锁已经关闭"
                itheima:desc_on="程序锁已经开启"
                itheima:title="程序锁的设置" >
            </com.wolf.wolfsafe.ui.SettingItemView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>