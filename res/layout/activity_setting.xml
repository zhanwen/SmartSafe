<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wolf="http://schemas.android.com/apk/res/com.wolf.wolfsafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:background="#8866ff00"
        android:gravity="center"
        android:text="设置中心"
        android:textColor="#000000"
        android:textSize="28sp" />

    <com.wolf.wolfsafe.ui.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        wolf:desc_off="设置自动更新已经关闭"
        wolf:desc_on="设置自动更新已经开启"
        wolf:title="设置自动更新" >
    </com.wolf.wolfsafe.ui.SettingItemView>

    <com.wolf.wolfsafe.ui.SettingItemView
        android:id="@+id/siv_show_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        wolf:desc_off="号码电归属地显示已经关闭"
        wolf:desc_on="号码电归属地显示已经开启"
        wolf:title="号码电归属地显示" >
    </com.wolf.wolfsafe.ui.SettingItemView>

    <com.wolf.wolfsafe.ui.SettingClickView
        android:id="@+id/scv_changebg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.wolf.wolfsafe.ui.SettingClickView>
    
    <com.wolf.wolfsafe.ui.SettingItemView
        android:id="@+id/siv_callsms_safe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        wolf:desc_off="黑名单拦截已经关闭"
        wolf:desc_on="黑名单拦截已经开启"
        wolf:title="黑名单拦截的设置" >
    </com.wolf.wolfsafe.ui.SettingItemView>
    
    
    
    
    
    
    
    
    
    

</LinearLayout>